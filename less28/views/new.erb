<h2>Add new Post</h2>

<form action="/new" method="post">
  <div>
    <label>Author name</label><br>
    <input type="text" name="author" class="form-control" placeholder="Enter author name" value="<%= @author %>">
  </div>

  <div class="mb-3">
  <label for="exampleFormControlTextarea1" class="form-label"></label>
  <textarea class="form-control" id="exampleFormControlTextarea1" rows="10" placeholder="type post text here..." name="content" value="<%= @content %>"></textarea>
	</div>


  <button type="submit" class="btn btn-primary">Submit</button>
</form>


