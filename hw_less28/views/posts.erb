<h1>All posts: </h1></br>
	<% @posts.each do |post| %>
		<%= post['author'] %> </br>
		<%= post['content'] %></br>
		<%= post['date_created'] %></br>
		<a href="/comments/<%=post['id'] %>">Comments</a></br>
		<form action="/posts" method="post"> 

		<button type="submit" class="btn btn-primary" name="btn_delete" value="<%= post['id'] %>">delete</button>
		</form>
		<hr>
	<% end %>
