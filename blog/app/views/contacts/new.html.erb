<h1>Contacts</h1>

<%= form_for :contact, url: contacts_path, data: {turbo: false} do |f| %>
	<% if @contact %>
		<p>
			<ul>
			<% @contact.errors.full_messages.each do |msg| %>
				<li><%= msg %>
			<% end %>
		</ul>
		</p>
	<% end %>
	<p>
		<%= f.label :name %><br>
		<%= f.text_field :name %><br>
	</p>
	<p>
		<%= f.label :phone %><br>
		<%= f.text_field :phone %><br>
	</p>
	<p>
		<%= f.label :email %><br>
		<%= f.text_field :email %><br>
	</p>
	<p>
		<%= f.label :message %><br>
		<%= f.text_area :message %><br>
	</p>
	<p>
		<%= f.submit 'Send message' %>
	</p>
<% end %>